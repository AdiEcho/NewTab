{
  "manifest_version": 3,
  "name": "NewTab",
  "version": "1.0.0",
  "description": "A beautiful and customizable new tab page",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "bookmarks",
    "tabs"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://v1.hitokoto.cn/*",
    "https://wttr.in/*",
    "https://www.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "快速添加网站"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
